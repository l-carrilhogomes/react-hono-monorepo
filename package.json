{
  "name": "boilerplate-hono-react",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.9",
    "lint-staged": "^16.1.2",
    "prettier": "^3.7.4",
    "turbo": "^2.6.3",
    "typescript": "5.9.2",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "rollup": "^4.53.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@hono/zod-validator": "^0.7.5",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-query": "^5.90.12",
    "hono": "^4.11.1",
    "tailwindcss": "^4.1.18",
    "zod": "^4.2.0"
  }
