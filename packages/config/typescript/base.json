{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Base TypeScript Config",
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "noUncheckedIndexedAccess": true,
        "noEmit": true
    },
    "exclude": [
        "node_modules",
        "dist",
        ".turbo"
    ]
}